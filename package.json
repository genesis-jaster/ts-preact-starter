{
  "name": "ts-preact-starter",
  "version": "1.0.0",
  "description": "Barebones starter project for Preact with TypeScript",
  "main": "index.js",
  "author": "Nick Taylor <nick@iamdeveloper.com>",
  "license": "MIT",
  "keywords": [
    "preact",
    "react",
    "typescript",
    "boilerplate"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=prod",
    "start": "webpack-dev-server --env.NODE_ENV=dev --progress --debug --config ./webpack.config.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "workbench": "start-storybook -p 9001"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@kadira/storybook": "2.35.0",
    "@types/html-webpack-plugin": "2.30.1",
    "@types/jest": "16.0.1",
    "@types/webpack": "3.8.1",
    "html-webpack-plugin": "2.30.1",
    "jest": "18.0.0",
    "preact-compat": "3.9.4",
    "prettier": "1.8.2",
    "ts-loader": "3.1.1",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.2",
    "tslint-config-prettier": "1.6.0",
    "tslint-loader": "3.5.3",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.2.0",
    "typescript": "2.6.1",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4"
  },
  "dependencies": {
    "preact": "8.1.0",
    "tslib": "1.6.0"
  }
}
