{
  "name": "ts-preact-starter",
  "version": "1.0.0",
  "description": "Barebones starter project for Preact with TypeScript",
  "main": "index.js",
  "author": {
    "name": "Nick Taylor",
    "email": "nick@iamdeveloper.com",
    "url": "https://www.iamdeveloper.com"
  },
  "license": "MIT",
  "keywords": [
    "preact",
    "react",
    "typescript",
    "boilerplate"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=prod",
    "start": "webpack-dev-server --env.NODE_ENV=dev --progress --debug --config ./webpack.config.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 9001"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.4.1",
    "@storybook/addon-links": "3.4.1",
    "@storybook/addons": "3.4.1",
    "@storybook/react": "3.4.1",
    "@types/html-webpack-plugin": "2.30.3",
    "@types/jest": "22.2.3",
    "@types/storybook__react": "3.0.7",
    "@types/webpack": "3.8.11",
    "html-webpack-plugin": "2.30.1",
    "jest": "22.3.0",
    "preact-compat": "3.18.0",
    "ts-loader": "3.5.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-loader": "3.6.0",
    "typescript": "2.8.1",
    "webpack": "3.11.0",
    "webpack-dev-server": "2.11.2"
  },
  "dependencies": {
    "preact": "8.2.7",
    "tslib": "1.9.0"
  }
}
