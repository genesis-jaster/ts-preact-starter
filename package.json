{
  "name": "ts-preact-starter",
  "version": "1.0.0",
  "description": "Barebones starter project for Preact with TypeScript",
  "main": "index.js",
  "author": {
    "name": "Nick Taylor",
    "email": "nick@iamdeveloper.com",
    "url": "https://www.iamdeveloper.com"
  },
  "license": "MIT",
  "keywords": ["preact", "react", "typescript", "boilerplate"],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=prod",
    "start":
      "webpack-dev-server --env.NODE_ENV=dev --progress --debug --config ./webpack.config.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 9001"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.4.1",
    "@storybook/addon-links": "3.4.1",
    "@storybook/addons": "3.4.1",
    "@storybook/react": "3.4.1",
    "@types/jest": "22.2.3",
    "@types/webpack": "4.1.3",
    "html-webpack-plugin": "3.0.0",
    "jest": "22.3.0",
    "preact-compat": "3.18.0",
    "ts-loader": "4.2.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-loader": "3.6.0",
    "typescript": "2.7.2",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.0.0"
  },
  "dependencies": {
    "preact": "8.2.7",
    "tslib": "1.9.0"
  }
}
